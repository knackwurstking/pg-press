package templates

templ FeedCounter(count int) {
	if count > 0 {
		<span
			style="
				position: absolute;
				top: 0;
				right: 0;
				width: 1rem;
				height: 1rem;
				font-size: 0.75rem;
				border-radius: 50%;
			"
			class="destructive ghost"
			id="feed-counter"
			class="flex justify-center items-center"
		>
			if count > 99 {
				99+
			} else {
				{ count }
			}
		</span>
	} else {
		<span id="feed-counter"></span>
	}
}
