package templates

import (
	"github.com/knackwurstking/pg-press/components"
	"github.com/knackwurstking/pg-press/env"
	"github.com/knackwurstking/pg-press/models"
)

templ RegenerationsContent(pressRegenerations []*models.PressRegeneration) {
	if len(pressRegenerations) == 0 {
		<p class="muted ghost w-full text-center italic text-sm">Es sind keine Regenerationen f√ºr diese Presse vorhanden.</p>
		{{ return }}
	}
	<figure>
		<table>
			<tr>
				// TODO: Find better <th> names for this table (start/stop)
				<th>Start</th>
				<th>Stop</th>
				<th>Bemerkung</th>
				<th></th>
			</tr>
			for _, r := range pressRegenerations {
				<tr>
					<td>{ r.StartedAt.Format(env.DateFormat) }</td>
					<td>{ r.CompletedAt.Format(env.DateFormat) }</td>
					<td>{ r.Reason }</td>
					<td>
						@components.TableActions(components.TableActionsOptions{
							// TODO: Action buttons: Edit and Delete
						})
					</td>
				</tr>
			}
		</table>
	</figure>
}
