package components

import (
	"github.com/knackwurstking/pg-press/env"
	"github.com/knackwurstking/pg-press/utils"
)

templ NavProfileButton() {
	<a
		role="button"
		class="ghost contrast icon"
		href={ templ.SafeURL(env.ServerPathPrefix + "/profile") }
		title="Profil"
	>
		<i class="bi bi-person-circle"></i>
	</a>
}

templ NavHomeButton() {
	<a
		role="button"
		class="ghost contrast icon"
		href={ templ.SafeURL(env.ServerPathPrefix + "/") }
		title="Startseite"
	>
		<i class="bi bi-house"></i>
	</a>
}

templ NavFeedButton() {
	<a
		role="button"
		class="ghost contrast icon"
		href={ templ.SafeURL(env.ServerPathPrefix + "/feed") }
		ws-connect={ utils.HXWsConnectNavFeedCounter() }
		hx-target="#feed-counter"
		hx-swap="outerHTML"
	>
		<i class="bi bi-bell"></i>
		<span id="feed-counter"></span>
	</a>
}

// Common navigation patterns to reduce duplication
templ StandardNavContent() {
	@NavFeedButton()
	@NavProfileButton()
	@NavHomeButton()
}

templ BasicNavContent() {
	@NavProfileButton()
	@NavHomeButton()
}
