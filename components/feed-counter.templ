package components

import "fmt"

templ FeedCounter(count int) {
	if count > 0 {
		<span
			id="feed-counter"
			class="destructive ghost flex justify-center items-center"
			style="position: absolute; top: 0; right: 0; width: 1rem; height: 1rem; font-size: 0.75rem; border-radius: 50%;"
		>
			if count > 99 {
				{ "99+" }
			} else {
				{ fmt.Sprint(count) }
			}
		</span>
	} else {
		<span id="feed-counter"></span>
	}
}
