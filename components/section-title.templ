package components

const (
	SectionTitleLevelMain SectionTitleLevel = 4
	SectionTitleLevelSub  SectionTitleLevel = 5
)

type SectionTitleLevel int8

templ SectionTitle(level SectionTitleLevel, text string) {
	<div class="flex justify-between items-center my">
		switch level {
			case SectionTitleLevelMain:
				<h4>{ text }</h4>
			case SectionTitleLevelSub:
				<h5>{ text }</h5>
			default:
				{ text }
		}
		<span>
			{ children... }
		</span>
	</div>
}
