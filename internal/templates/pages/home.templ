package pages

import (
	"fmt"
	"github.com/knackwurstking/pgpress/internal/templates/layouts"
)

templ homeNavContent() {
	<div class="flex flex-row gap justify-end items-center">
		@navFeedButton()
		@navProfileButton()
		@navHomeButton()
	</div>
}

templ HomePage() {
	@layouts.Main(
		layouts.MainOptions{
			PageTitle:   "PG Presse",
			AppBarTitle: "Home",
			NavContent:  homeNavContent(),
		},
	) {
		<main class="container fluid">
			<nav>
				<div class="flex flex-col gap justify-center">
					<!-- Anchor Button => Trouble Reports Page -->
					@homePageNavItem(
						"./trouble-reports",
						"exclamation-triangle",
						"Problemberichte",
						"Verwalten Sie Problemberichte und LÃ¶sungen",
					)
					<!-- TODO: Anchor Button => ??? Page -->
					@homePageNavItem(
						"./???",
						"question-circle",
						"???",
						"Description...",
					)
				</div>
			</nav>
		</main>
	}
}

templ homePageNavItem(href, icon, title, description string) {
	<a
		role="button"
		class="ghost secondary flex flex-row gap justify-between items-center"
		style="width: 90%; margin: 0 auto;"
		href={ href }
	>
		<span style="width: 100%;" class="flex flex-row gap items-center">
			if icon != "" {
				<i style="margin: var(--ui-spacing);" class={ fmt.Sprintf("bi bi-%s", icon) }></i>
			}
			<span class="flex flex-col">
				<strong>{ title }</strong>
				<small style="text-wrap: auto;">{ description }</small>
			</span>
		</span>
		<i class="bi bi-chevron-right"></i>
	</a>
}
