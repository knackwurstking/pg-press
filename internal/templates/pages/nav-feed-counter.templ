// TODO: Move to a separate package
package pages

templ NavFeedCounter(count int) {
	if count > 0 {
		<span
			style="
                position: absolute;
                color: var(--ui-destructive);
                background-color: var(--ui-destructive-text);
                top: 0;
                right: 0;
                width: 1rem;
                height: 1rem;
                font-size: 0.75rem;
                border-radius: 50%;
            "
			id="feedCounter"
			class="flex justify-center align-center"
		>
			if count > 9 {
				9+
			} else {
				{ count }
			}
		</span>
	} else {
		<span id="feedCounter"></span>
	}
}
