package components

import "github.com/knackwurstking/pgpress/internal/database"

templ ToolPosition(position database.Position) {
	switch position {
		case database.PositionTop:
			<small
				style="border-radius: var(--ui-radius);"
				class="primary px-sm"
			>
				Oberteil
			</small>
		case database.PositionBottom:
			<small
				style="border-radius: var(--ui-radius);"
				class="primary px-sm"
			>
				Unterteil
			</small>
	}
}
