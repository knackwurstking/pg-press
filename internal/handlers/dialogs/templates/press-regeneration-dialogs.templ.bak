package templates

import (
	"net/http"

	"github.com/knackwurstking/pg-press/internal/components"
	"github.com/knackwurstking/pg-press/internal/shared"
	"github.com/knackwurstking/pg-press/internal/urlb"

	ui "github.com/knackwurstking/ui/ui-templ"
)

templ EditPressRegenerationDialog(r *shared.PressRegeneration) {
	@ui.Dialog(ui.DialogOptions{
		Method:           http.MethodPut,
		Href:             urlb.UrlDialogs().EditPressRegeneration(r.ID),
		ID:               "press-regeneration-dialog",
		SubmitButtonText: "Aktualisieren",
	}) {
		@components.Section(nil) {
			<p>Presse: { r.PressNumber }</p>
			<p>Von { r.Start.FormatDate() } bis { r.Stop.FormatDate() }</p>
		}
		<label class="flex flex-col gap-0" for="cycles-input">
			Zyklen
			<input
				id="cycles-input"
				name="cycles-input"
				type="number"
				value={ r.Cycles }
			/>
		</label>
	}
}
