package templates

import (
	"github.com/knackwurstking/pg-press/internal/components"
	"github.com/knackwurstking/pg-press/internal/shared"
)

// Active tools section component
templ ActiveToolsSection(pu *shared.PressUtilization) {
	<div class="flex flex-col gap">
		if pu.SlotUpper == nil || pu.SlotLower == nil {
			@components.NotFoundText("Keine aktiven Werkzeuge f√ºr diese Presse")
		} else {
			if pu.SlotUpper != nil {
				@components.ToolAnchor(components.ToolAnchorProps{
					Tool:            pu.SlotUpper,
					BindingCassette: pu.SlotUpperCassette,
				})
			} else {
				// TODO: Input element to assign a tool to upper slot
			}
			if pu.SlotLower != nil {
				@components.ToolAnchor(components.ToolAnchorProps{
					Tool: pu.SlotLower,
				})
			} else {
				// TODO: Input element to assign a tool to lower slot
			}
		}
	</div>
}
