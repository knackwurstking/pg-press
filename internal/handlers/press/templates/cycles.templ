package templates

import (
	"fmt"

	"github.com/knackwurstking/pg-press/internal/components"
	"github.com/knackwurstking/pg-press/internal/shared"
	"github.com/knackwurstking/pg-press/internal/urlb"
	"github.com/knackwurstking/ui/templ/css"
)

type CyclesProps struct {
	Cycles []*shared.Cycle
	Tools  map[shared.EntityID]*shared.Tool
	User   *shared.User
}

templ Cycles(p CyclesProps) {
	<figure class={ css.WFull, css.OverflowXScroll }>
		<table name="additional-cycles-table" class={ css.TableBorderless, css.TableCompact }>
			<thead>
				<tr>
					<th>Start</th>
					<th>Stop</th>
					<th>Werkzeug</th>
					<th>Position</th>
					<th>Gesamtzyklen</th>
					<th>Teilzyklen (berechnet)</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@renderPressCyclesRows(p)
			</tbody>
		</table>
	</figure>
}

templ renderPressCyclesRows(p CyclesProps) {
	if len(p.Cycles) == 0 {
		<tr>
			<td colspan="7" class={ css.TextCenter }>
				@components.NotFoundText("Kein Pressenverlauf verf√ºgbar")
			</td>
		</tr>
	} else {
		for _, cycle := range p.Cycles {
			{{ tool, _ := p.Tools[cycle.ToolID] }}
			if !tool.IsTrackable() {
				{{ continue }}
			}
			@renderPressCycleRow(cycle, tool, p.User)
		}
	}
}

templ renderPressCycleRow(cycle *shared.Cycle, tool *shared.Tool, user *shared.User) {
	<tr>
		// Cycle Start
		<td>
			<span class={ css.TextSM }>{ cycle.Start.FormatDate() }</span>
		</td>
		// Cycle Stop
		<td>
			<span class={ css.TextSM }>{ cycle.Stop.FormatDate() }</span>
		</td>
		// Cycle Tool
		<td>
			if tool != nil {
				<span class={ css.TextXS }>{ tool.German() }</span>
			} else {
				<span class={ css.TextXS }>{ cycle.ToolID }</span>
			}
		</td>
		// Cycle Position
		<td>
			if tool != nil {
				<span class={ css.TextXS }>{ tool.Position.German() }</span>
			} else {
				<span class={ css.TextXS }>?</span>
			}
		</td>
		// Total Cycles
		<td>
			{ fmt.Sprintf("%d", cycle.PressCycles) }
		</td>
		// Partial Cycles
		<td>
			<span title="Berechnet: Gesamtzyklen - Gesamtzyklen des letzten Eintrags">
				{ fmt.Sprintf("%d", cycle.PartialCycles) }
			</span>
		</td>
		// Actions
		<td>
			<span class={ css.ButtonGroup, css.Flex, css.JustifyEnd, css.ItemsCenter }>
				{{ toolChangeMode := true }}
				@components.TableActions(components.TableActionsOptions{
					EditHref:        urlb.DialogEditCycleGet(cycle.ID, cycle.ToolID, toolChangeMode),
					EditAdminOnly:   true,
					DeleteHref:      urlb.ToolCycleDelete(cycle.ID),
					DeleteAdminOnly: true,
					User:            user,
				})
			</span>
		</td>
	</tr>
}
