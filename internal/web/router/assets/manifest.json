      "url": "./feed",
      "icons": [
        {
          "src": "./icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Problemberichte",
      "short_name": "Berichte",
      "description": "Problemberichte anzeigen und verwalten",
      "url": "./trouble-reports",
      "icons": [
        {
          "src": "./icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Werkzeuge",
      "short_name": "Werkzeuge",
      "description": "Werkzeuge anzeigen und verwalten",
      "url": "./tools",
      "icons": [
        {
          "src": "./icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ]
