package components

import "github.com/knackwurstking/pgpress/internal/env"

templ NavProfileButton() {
	<a
		role="button"
		class="ghost contrast icon"
		href={ env.ServerPathPrefix + "/profile" }
		title="Profil"
	>
		<i class="bi bi-person-circle"></i>
	</a>
}

templ NavHomeButton() {
	<a role="button" class="ghost contrast icon" href={ env.ServerPathPrefix + "/" } title="Startseite">
		<i class="bi bi-house"></i>
	</a>
}

templ NavFeedButton() {
	<a
		role="button"
		class="ghost contrast icon"
		href={ env.ServerPathPrefix + "/feed" }
		hx-ws={ "connect:" + env.ServerPathPrefix + "/htmx/nav/feed-counter" }
		hx-target="#feed-counter"
		hx-swap="outerHTML"
	>
		<i class="bi bi-bell"></i>
		<span id="feed-counter"></span>
	</a>
}
