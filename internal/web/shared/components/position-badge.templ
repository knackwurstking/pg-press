package components

import (
	"fmt"

	"github.com/knackwurstking/pgpress/pkg/models"
)

templ PositionBadge(position models.Position, classNames string) {
	switch position {
		case models.PositionTop:
			<small class={ fmt.Sprintf("badge badge-sm %s", classNames) }>
				{ models.PositionTop.GermanString() }
			</small>
		case models.PositionTopCassette:
			<small class={ fmt.Sprintf("badge badge-sm %s", classNames) }>
				{ models.PositionTopCassette.GermanString() }
			</small>
		case models.PositionBottom:
			<small class={ fmt.Sprintf("badge badge-sm %s", classNames) }>
				{ models.PositionBottom.GermanString() }
			</small>
	}
}
