{
        "name": "pgpress - Pressgruppen-Visualisierung",
        "short_name": "PG Presse",
        "description": "Inoffizielle Pressen Web App.",
        "version": "0.0.1",
        "manifest_version": 3,
        "start_url": "./",
        "scope": "./",
        "id": "pgpress-app",
        "display": "standalone",
        "theme_color": "#1d2021",
        "background_color": "#1d2021",
        "lang": "de",
        "dir": "ltr",
        "categories": ["productivity", "business", "utilities"],

        "icons": [
                {
                        "src": "./pwa-64x64.png",
                        "sizes": "64x64",
                        "type": "image/png",
                        "purpose": "any"
                },

                {
                        "src": "./pwa-192x192.png",
                        "sizes": "192x192",
                        "type": "image/png",
                        "purpose": "any"
                },

                {
                        "src": "./pwa-512x512.png",
                        "sizes": "512x512",
                        "type": "image/png",
                        "purpose": "any"
                },

                {
                        "src": "./maskable-icon-512x512.png",
                        "sizes": "512x512",
                        "type": "image/png",
                        "purpose": "maskable"
                },

                {
                        "src": "./apple-touch-icon-180x180.png",
                        "sizes": "180x180",
                        "type": "image/png",
                        "purpose": "any"
                }
        ],

        "screenshots": [],
        "prefer_related_applications": false,

        "edge_side_panel": {
                "preferred_width": 400
        },

        "launch_handler": {
                "client_mode": "auto"
        },

        "shortcuts": [
                {
                        "name": "Feed",
                        "short_name": "Feed",
                        "description": "Neueste Feed-Updates anzeigen",
                        "url": "./feed",
                        "icons": [
                                {
                                        "src": "./icon.png",
                                        "sizes": "96x96"
                                }
                        ]
                },

                {
                        "name": "Problemberichte",
                        "short_name": "Berichte",
                        "description": "Problemberichte anzeigen und verwalten",
                        "url": "./trouble-reports",
                        "icons": [
                                {
                                        "src": "./icon.png",
                                        "sizes": "96x96"
                                }
                        ]
                },

                {
                        "name": "Werkzeuge",
                        "short_name": "Werkzeuge",
                        "description": "Werkzeuge anzeigen und verwalten",
                        "url": "./tools",
                        "icons": [
                                {
                                        "src": "./icon.png",
                                        "sizes": "96x96"
                                }
                        ]
                }
        ]
}
