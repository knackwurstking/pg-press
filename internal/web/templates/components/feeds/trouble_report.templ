package feeds

import (
	"fmt"

	feedmodels "github.com/knackwurstking/pgpress/internal/database/models/feed"
)

templ AddTroubleReport(data *feedmodels.TroubleReportAdd) {
	<div class="feed-item">
		<div class="feed-item-content" style="padding: var(--ui-spacing);">
			Benutzer <strong>{ data.ModifiedBy.UserName }</strong> hat einen neuen Problembericht mit dem Titel
			<a href={ templ.URL(fmt.Sprintf("./trouble-reports#trouble-report-%d", data.ID)) } class="info">{ data.Title }</a> hinzugef√ºgt.
		</div>
	</div>
}

templ UpdateTroubleReport(data *feedmodels.TroubleReportUpdate) {
	<div class="feed-item">
		<div class="feed-item-content" style="padding: var(--ui-spacing);">
			Benutzer <strong>{ data.ModifiedBy.UserName }</strong> hat den Problembericht mit dem Titel
			<a href={ templ.URL(fmt.Sprintf("./trouble-reports#trouble-report-%d", data.ID)) } class="info">{ data.Title }</a> aktualisiert.
		</div>
	</div>
}

templ RemoveTroubleReport(data *feedmodels.TroubleReportRemove) {
	<div class="feed-item">
		<div class="feed-item-content" style="padding: var(--ui-spacing);">
			User <strong>{ data.RemovedBy.UserName }</strong> hat den Problembericht mit dem Titel
			<strong style="color: var(--ui-secondary);">{ data.Title }</strong> entfernt.
		</div>
	</div>
}
