package feeds

import (
	"fmt"

	feedmodels "github.com/knackwurstking/pgpress/internal/database/models/feed"
)

templ AddTool(data *feedmodels.ToolAdd) {
	<div class="feed-item">
		<div class="feed-item-content" style="padding: var(--ui-spacing);">
			Benutzer <strong>{ data.ModifiedBy.UserName }</strong> hat ein neues Werkzeug
			<a href={ templ.URL(fmt.Sprintf("./tools/tool/%d", data.ID)) } class="info">{ data.Tool }</a> zur <a href={ templ.URL(fmt.Sprintf("./tools/#tool-%d", data.ID)) } class="info">Werkzeugliste</a> hinzugef√ºgt.
		</div>
	</div>
}

templ UpdateTool(data *feedmodels.ToolUpdate) {
	<div class="feed-item">
		<div class="feed-item-content" style="padding: var(--ui-spacing);">
			Benutzer <strong>{ data.ModifiedBy.UserName }</strong> hat das Werkzeug
			<a href={ templ.URL(fmt.Sprintf("./tools/tool/%d", data.ID)) } class="info">{ data.Tool }</a> aktualisiert.
		</div>
	</div>
}

templ DeleteTool(data *feedmodels.ToolDelete) {
	<div class="feed-item">
		<div class="feed-item-content" style="padding: var(--ui-spacing);">
			Benutzer <strong>{ data.ModifiedBy.UserName }</strong> hat das Werkzeug
			<strong style="color: var(--ui-secondary);">{ data.Tool }</strong> entfernt.
		</div>
	</div>
}
