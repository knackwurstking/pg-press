package components

import "github.com/knackwurstking/pgpress/internal/web/constants"

templ FeedCounter(count int) {
	if count > 0 {
		<span
			style="
                position: absolute;
                color: var(--ui-destructive);
                background-color: var(--ui-destructive-text);
                top: 0;
                right: 0;
                width: 1rem;
                height: 1rem;
                font-size: 0.75rem;
                border-radius: 50%;
            "
			id={ constants.IDFeedCounter }
			class="flex justify-center items-center"
		>
			if count > 9 {
				9+
			} else {
				{ count }
			}
		</span>
	} else {
		<span id={ constants.IDFeedCounter }></span>
	}
}
