package components

templ ActionBar(attr templ.Attributes) {
	{{
		if attr == nil {
			attr = templ.Attributes{}
		}

		if c, ok := attr["class"]; ok {
			attr["class"] = "flex gap-4 justify-end p-4 " + c.(string)
		} else {
			attr["class"] = "flex gap-4 justify-end p-4"
		}
	}}
	<div { attr... }>
		{ children... }
	</div>
}
