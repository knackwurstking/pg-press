package components

const (
	MainTitle SectionTitleLevel = iota
	SubTitle
)

type SectionTitleLevel int8

templ SectionTitle(level SectionTitleLevel, text string) {
	<div class="flex justify-between items-center my">
		switch level {
			case MainTitle:
				<h4>{ text }</h4>
			case SubTitle:
				<h5>{ text }</h5>
			default:
				{ text }
		}
		<span>
			{ children... }
		</span>
	</div>
}
